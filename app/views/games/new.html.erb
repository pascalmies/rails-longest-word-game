<h1>New Letters</h1>

<% @rand_letters.each do |letter| %>
<div class="flex-box">
<p class="letter"> <%= letter %> </p>
</div>
<% end %>


<form action="/score" class="form-group space" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :computer_grid, @rand_letters %>
  <label for="guess">What is the longest word you can find?</label>
  <input type="text" id="guess" name="guess" class="form-control col-sm-4 col-offset-4">
  <input type="submit" value="Let's play a game!" class="btn-primary">
</form>
